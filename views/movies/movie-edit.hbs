  <h2>EDIT MOVIE</h2>
  
  <form action="/movies/edit/{{movie._id}}" method="POST">
  
  <label for="title">Title</label>
  <input type="text" name="title" value="{{movie.title}}">
  
  <label for="genre">Genre</label>
  <input type="text" name="genre" value="{{movie.genre}}">
  
  <label for="plot">Plot</label>
  <textarea name="plot" cols="30" rows="10">{{movie.plot}}</textarea>
  
   <label for="celebrity">

    <select name="celebrity" multiple>
      <option disable selected value=""></option>
      {{#each dbCelebrity}}
        <option value="{{_id}}"> {{name}} </option>
      {{/each}}
    </select>
  </label>
  
  
  <button type="submit">EDIT MOVIE</button>
  
  
  </form>
  
   
  